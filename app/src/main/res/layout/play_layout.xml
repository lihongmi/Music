<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/play_back"
        android:src="@mipmap/back"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/play_songname"
            android:text="有一个地方"
            android:layout_marginLeft="50dp"
            android:maxLines="1"
            android:maxEms="10"
            android:textSize="20sp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/play_singername"
            android:text="张学友"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/albumn_big_pic"
        android:src="@drawable/angry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="380dp"
        android:layout_height="380dp" />
    <ImageView
        android:id="@+id/play_big_btn"
        android:src="@mipmap/play"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/albumn_big_pic"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/before" />
    <ImageView
        android:src="@mipmap/next"
        android:layout_toRightOf="@+id/play_big_btn"
        android:layout_below="@+id/albumn_big_pic"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="35dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/next" />
    <ImageView
        android:src="@mipmap/before"
        android:layout_marginTop="22dp"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/play_big_btn"
        android:layout_below="@+id/albumn_big_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/before" />
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_big_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/play_download"
        android:src="@mipmap/download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>